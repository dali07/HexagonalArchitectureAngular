    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@cucumber/cucumber": "^10.8.0",
    "@types/chai": "^4.3.16",
    "@types/sinon": "^17.0.3",
    "chai": "^5.1.1",
    "cross-env": "^7.0.3",
    "rxjs": "~7.8.0",
    "sinon": "^18.0.0",
